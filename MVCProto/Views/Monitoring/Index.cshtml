
@{
    ViewBag.Title = "Index";
}


<link type="text/css" rel="stylesheet" href="../../Content/map_page_style.css" />


<div class="map_content">

    @*<h2>Index</h2>*@
   @* <hr />*@
    <div id="map">
        <div class="map_control">
            <button id="btn_toggle" class="btn btn-sm btn-warning">Скрыть</button>
            <div class="table-responsive  ">               

                <table class="table text-light">
                    <tr>
                        <th>Дрон</th>
                        <th>Координаты</th>
                        <th>Описание</th>


                    </tr>

                    @foreach (var drone in ViewBag.Drones)
                     {
                    <tr>
                        <td>@drone.droneName</td>
                        <td>@drone.X<br/>@drone.Y</td>
                        <td>@drone.droneDescription</td>
                     
                    </tr>

                     }
                </table>

            </div>
        </div>
    </div>

</div>

<script src="https://api-maps.yandex.ru/2.1/?apikey=5e37881d-286e-4485-985a-22f5b27ed7e8&lang=ru_RU" type="text/javascript"></script>
<script src="https://yandex.st/jquery/2.2.3/jquery.min.js" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/mapScript.js")" type="text/javascript"></script>




